@using System.Collections.Generic
@using Microsoft.AspNetCore.Components


<Modal @ref="modal" Title="Comment participer à une annonce ?" IsVerticallyCentered="true" Size="ModalSize.Large">
    <BodyTemplate>
        <Tabs EnableFadeEffect="true">
            <!-- Étape 1 : Trouver une annonce -->
            <Tab Active="true">
                <TitleTemplate>
                    <Badge Color="BadgeColor.Dark" IndicatorType="BadgeIndicatorType.RoundedPill">1</Badge><span class="text-black">Trouver une annonce</span>
                </TitleTemplate>
                <Content>
                    <div class="text-center mt-3">
                        <img src="images/etape1_filtrer.png" alt="Filtrer les annonces" class="img-fluid mb-2" style="max-height: 150px;">
                        <p class="text-muted">Regardez et filtrez les annonces pour trouver celle qui vous fait envie.</p>
                    </div>
                </Content>
            </Tab>

            <!-- Étape 2 : Lire les informations -->
            <Tab>
                <TitleTemplate >
                    <Badge Color="BadgeColor.Dark" IndicatorType="BadgeIndicatorType.RoundedPill">2</Badge>  <span class="text-black">Lire les informations</span>
                </TitleTemplate>
                <Content>
                    <div class="text-center mt-3">
                        <img src="images/etape2_infos.png" alt="Lire les informations" class="img-fluid mb-2" style="max-height: 150px;">
                        <p class="text-muted">Lisez attentivement les informations de l'annonce : lieu, date, type de sport, et participants.</p>
                    </div>
                </Content>
            </Tab>

            <!-- Étape 3 : Participer -->
            <Tab>
                <TitleTemplate >
                    <Badge Color="BadgeColor.Dark" IndicatorType="BadgeIndicatorType.RoundedPill">3</Badge><span class="text-black">Participer</span>

                </TitleTemplate>
                <Content>
                    <div class="text-center mt-3">
                        <img src="images/etape3_participer.png" alt="Participer à l'annonce" class="img-fluid mb-2" style="max-height: 150px;">
                        <p class="text-muted">Cliquez sur le bouton "Participer" pour rejoindre l'annonce.</p>
                    </div>
                </Content>
            </Tab>

            <!-- Étape 4 : Attendre l'acceptation -->
            <Tab>
                <TitleTemplate >

                    <Badge Color="BadgeColor.Dark" IndicatorType="BadgeIndicatorType.RoundedPill">4</Badge>  <span class="text-black">Attendre l'acceptation</span>
                </TitleTemplate>
                <Content>
                    <div class="text-center mt-3">
                        <img src="images/etape4_confirmation.png" alt="Confirmation" class="img-fluid mb-2" style="max-height: 150px;">
                        <p class="text-muted">Attendez que l'auteur de l'annonce accepte votre participation.</p>
                    </div>
                </Content>
            </Tab>
        </Tabs>

    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Fermer</Button>
    </FooterTemplate>
</Modal>

<Button Color="ButtonColor.None" @onclick="OnShowModalClick" TooltipTitle="Comment participer à une annonce ?" Size="Size.Medium">
    <Icon Name="IconName.InfoCircleFill"  Color="IconColor.Dark" />
</Button>

@code {
    private Modal modal = default!;
   


    private async Task OnShowModalClick()
    {
        await modal.ShowAsync();
    }

    private async Task OnHideModalClick()
    {
        await modal.HideAsync();
    }
}